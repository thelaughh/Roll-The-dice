<Window x:Class="Roll_The_dice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Roll_The_dice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <StackPanel Background="DarkBlue">

        <TextBlock Text="Vyberte :" Foreground="White" FontSize="25"/>
        <TextBox x:Name="input" Height="25" Width="245" Foreground="White"/>
        <Label Content="Trivia" Foreground="GreenYellow" FontSize="25"/>
        <RadioButton Tag="trivia" BorderBrush="Red" BorderThickness="10" Checked="RadioButton_Checked"/>


        <Label Content="Year" Foreground="CadetBlue" FontSize="25"/>
        <RadioButton Tag="year" BorderBrush="Red" BorderThickness="10" Checked="RadioButton_Checked"/>
        
        
        <Label Content="Date" Foreground="Red" FontSize="25"/>
        <RadioButton Tag="date" BorderBrush="Red" BorderThickness="10" Checked="RadioButton_Checked"/>
        
        
        <Label Content="Month" Foreground="DarkCyan" FontSize="25"/>
        <RadioButton Tag="month" BorderBrush="Red" BorderThickness="10" Checked="RadioButton_Checked"/>
    </StackPanel>
</Window>
